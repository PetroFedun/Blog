<h1 class="text-center">Articles</h1>

<br>

<div class="row" style="justify-content: space-between;">
  <% @articles.each do |article| %>
    <div class="card col-4" style="width: 24rem; margin-bottom: 2rem; box-sizing: content-box;">
      <img src="https://tinypng.com/images/social/website.jpg" class="card-img-top" alt="..." style="padding-top: 12px;">
      <div class="card-body">
        <h5 class="card-title"><%= article.title %></h5>
        <p class="card-text"><%= article.body %></p>
        <%= link_to article do %>
          <button class="btn btn-outline-primary">View</button>
        <% end %>
      </div>
    </div>
  <% end %>
</div>


<br>

<%= link_to "New Article", new_article_path, class:"btn btn-outline-primary" %>
