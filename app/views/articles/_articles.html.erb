<div class="row mx-auto p-2 justify-content-start">
  <% article.each do |article| %>
    <div class="card col-12 col-sm-6 m-2" id="card">
      <%= link_to article do %>
        <% if article.preview_img.present? %>
          <%= image_tag article.preview_img, class:"article-preview-img" %>
        <% else %>
          <img src="<%= asset_path('default-article-img.jpg') %>" class="article-preview-img">
        <% end %>
      <% end %>

      <div class="card-body">
        <h5 class="card-title"><%= article.title.truncate(70, omission: '...') %></h5>
        <p class="card-text"><%= article.body.truncate_words(10, omission: '...') %></p>
        <%= link_to article do %>
          <button class="btn btn-primary">View</button>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
