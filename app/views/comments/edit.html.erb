<%= render 'shared/errors', object: @comment %>

<% provide(:title, "Edit comment") %>

<div class="mt-3 border p-3 mx-auto w-75">
  <%= form_with model: [@article, @comment], class: "form", method: :patch do |form| %>
    <h4 class="mb-3">
      <%= form.label :Comment, class:"form-label" %>
      <%= form.text_area :body, class:"form-control", rows:"6", placeholder:"Comment text" %>
    </h4>

    <div class="mb-3">
      <%= form.submit class:"btn btn-primary" %>
    </div>
  <% end %>
</div>
