<div class="mt-3 border p-3 mx-auto">
  <%= form_with model: [ @article, @article.comments.build ], class: "form" do |form| %>
    <h4 class="mb-3">
      <%= form.label :Comment, class:"form-label" %>
      <%= form.text_area :body, class:"form-control", rows:"6", placeholder:"Comment text" %>
    </h4>

    <div class="mb-3">
      <%= form.submit class:"btn btn-primary" %>
    </div>
  <% end %>
</div>
